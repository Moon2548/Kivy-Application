<CreateCharacter1>:
    BoxLayout:
        id: slime
        size: root.width / 2 , root.height / 2
        pos: 0, 10000
        Label:
            text:'slime'
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: root.my_source
        GridLayout:
            pos: 0,0
            size_hint: 1 ,0.3 
            cols: 3
            Button:
                text: 'select'
                on_press: root.select_slime()

    GridLayout:
        id: tribe
        cols: 3
        spacing: 20
        pos: root.width / 2, 0
        size: root.width / 2 , root.height
        Button:
            text: 'Slime'
            on_press: root.animate_slime(slime)
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: root.my_source
        Label:
            text:'No character'
        Label:
            text:'No character'
        Label:
            text:'No character'
        Label:
            text:'No character'
        Label:
            text:'No character'
        Label:
            text:'No character'
        Label:
            text:'No character'
        Label:
            text:'No character'
    
    BoxLayout:
        id: swordsman
        size: root.width / 2 , root.height / 2
        pos: 0, 10000
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
                source: ''
        GridLayout:
            pos: 0,0
            size_hint: 1 ,0.3 
            cols: 3
            Button:
                text: 'select'
                on_press:
                    root.select_sword()
                    root.close_create()
    
    GridLayout:
        id: role_select
        cols: 3
        spacing: 20
        pos: 10000 , 10000
        size: root.width / 2 , root.height
        Button:
            text: 'Swordsman'
            on_press: root.animate_sword(swordsman)
        Label:
            text:'No class'
        Label:
            text:'No class'
        Label:
            text:'No class'
        Label:
            text:'No class'
        Label:
            text:'No class'
        Label:
            text:'No class'
        Label:
            text:'No class'
        Label:
            text:'No class'
    
    Button:
        text: 'back'
        size: root.width * 0.1, root.height * 0.1
        pos: root.width * 0.9, root.height * 0.9
        on_press:
            root.close_create()
            root.open_menu()