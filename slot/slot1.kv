<Play>:
    BoxLayout:
        orientation:'vertical'
        size: root.width, root.height
        Button:
            text: 'play'
            on_press: root.write()
        Button:
            text:'save & exit'
            on_press: root.close_app()
        Carousel:
            direction: 'right'
            Label:
                text:'1'
            Label:
                text:'2'
            Label:
                text:'3'
            Label:
                text:'4'
            Label:
                text:'5'