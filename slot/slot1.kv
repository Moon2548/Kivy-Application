#tribe: slime
#role: sword
#status: use slot


<Play1>:
    FloatLayout:
        id: object
        size: root.width, root.height
        pos: 0,0
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
        orientation:'vertical'
        id: player
        pos: root.width / 2 - 50, root.height / 2 - 50
        size: 100, 100
        canvas:
            Color:
                rgba: 1, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size