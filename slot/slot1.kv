#tribe: slime
#role: ranger
#status: use slot


<Play1>:
    FloatLayout:
        id: object
        size: root.width, root.height
        pos: 0,0
        canvas:
            Color:
                rgba: 0, 0, 0.5, 0.5
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation:'vertical'
        id: player
        pos: root.width / 2 - 50, root.height / 2 - 50
        size: 100, 100
        canvas:
            Color:
                rgba: 1, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
    
    BoxLayout:
        orientation:'vertical'
        c: 0
        id: enemy
        pos: 0, 0
        size: 100, 100
        canvas:
            Color:
                rgba: 0.5, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
    
    BoxLayout:
        orientation:'vertical'
        id: bullet0
        pos: 1000, 10000
        size_hint: None, None
        size: 20, 20
        canvas:
            Color:
                rgba: 0, 1, 0, 1
            Ellipse:
                pos: self.pos
                size: self.size

    Button:
        text: 'exit'
        size: root.width * 0.1, root.height * 0.1
        pos: root.width * 0.9, root.height * 0.9
        on_press:
            root.close_play()
            root.open_menu()