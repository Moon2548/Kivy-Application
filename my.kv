Screenmanager:
    MainScreen:
    SettingScreen:
    PlayScreen:
    
<PlayScreen>:
    name: 'play'

<SettingScreen>:
    name: 'setting'
    Button:
        size_hint: 0.1, 0.1
        pos: root.width * 0.9, root.height * 0.9
        text: 'Back'
        on_press: 
            app.root.current = 'main'
            root.manager.transition.direction = 'right'
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        Label:
            text: ''
            id: slider_label
            font_size: 32
        Slider:
            min:0
            max:100
            orientation: 'horizontal'
            on_value: root.slide_test(*args)

<MainScreen>:
    name: 'main'
    Label:
        text:'Slime'
        pos: 0, root.height * 0.5
        font_size: 150
        size_hint: (None, None)
        size: root.width * 0.3, 400
        background_color: (1, 1, 0, 0)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size
        color: (0 , 1 , 0 , 1)
        bold: True
        italic: True
        outline_color: (0, 0, 1)
        outline_width: 20

    BoxLayout:
        orientation:'vertical'
        size_hint: 0.3, 0.5
        padding: ('20dp', '20dp', '20dp', '20dp')
        spacing: root.height * 0.01
        Button:
            text: 'Play'
            on_press:
                app.root.current = 'play'
                root.manager.transition.direction = 'down'
        Button:
            text: 'Setting'
            on_press:
                app.root.current = 'setting'
                root.manager.transition.direction = 'left'
        Button:
            text: 'Exit'
            on_press: root.close_app()
            background_normal: ''
            background_color: (0/255, 0/255, 255/255, 1)